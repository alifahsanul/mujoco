<mujoco model="simple_arm">
  <compiler angle="degree"/>
  <option integrator="RK4" timestep="0.01"/>

  <visual>
    <global offheight="720"/>
  </visual>

  <asset>
    <mesh name="base_mesh" file="cad/base.stl" scale="0.01 0.01 0.01"/>
    <mesh name="arm1_mesh" file="cad/arm1.stl" scale="0.01 0.01 0.01"/>
    <mesh name="arm2_mesh" file="cad/arm2.stl" scale="0.01 0.01 0.01"/>
  </asset>

  <worldbody>    
    <light name="main_light" pos="0 1 2" dir="0 -1 -1"/>

    <!-- Define the base of the robot -->
    <body name="base" pos="0 0 0">
      <geom type="mesh" mesh="base_mesh" rgba="0.8 0.8 0.8 1" contype="0" conaffinity="0"/>
      
      <!-- Define the rotating arm -->
      <body name="arm1" pos="0.15 0.15 0.3">
        <joint name="arm1_joint" type="hinge" axis="0 0 1" pos="-0.15 -0.15 0"/>
        <geom type="mesh" mesh="arm1_mesh" rgba="0.1 0.1 0.8 1" pos="0 0 0"/>
        
        <!-- Define the second rotating arm -->
        <body name="arm2" pos="-0.15 -1.06 1.15">
          <joint name="arm2_joint" type="hinge" axis="0 0 1" pos="0 0 0" range="-15 195"/>
          <geom type="mesh" mesh="arm2_mesh" rgba="0.2 0.3 0.2 1" pos="0 0 0"/>
          <site name="arm2_tip" pos="-1.2 0 0.1" size="0.01" rgba="1 0 0 1"/>
        </body>
      </body>
    </body>

    <body name="ball" pos="-1 -1.2 1.5">
      <geom name="ball_geom" type="sphere" size="0.1" rgba="0 1 0 1" contype="0" conaffinity="0"/>
    </body>
  </worldbody>

  <actuator>
    <motor joint="arm1_joint" ctrlrange="-2 2" ctrllimited="true"/>
    <motor joint="arm2_joint" ctrlrange="-2 2" ctrllimited="true"/>
  </actuator>

  <sensor>
    <framepos objtype="site" objname="arm2_tip"/>
  </sensor>
</mujoco>
